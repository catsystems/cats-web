{% extends "base.njk" %}

{% block title %}{{ title }}{% endblock %}
{% block description %}{{ description }}{% endblock %}

{% block content %}
  <h1 class="page-heading">Community and Support</h1>
  <div class="section-container">
    {% for section in sections %}
      <div class="section">
        <h2>{{ section.heading }}</h2>
        <p>{{ section.paragraph | safe }}</p>
      </div>
    {% endfor %}
    <div class="section">
      <div class="newsletter-signup">
        <h2>Get the Latest Updates</h2>
        <a href="https://discord.gg/r7ErmSNvsy" target="_blank">
          <button class="primary-button newsletter-button"><b>Join our Discord</b></button>
        </a>
      </div>
    </div>
  </div>
{% endblock %}
